<% title "Admin:Users" -%>

<table>
  <tr>
    <th>Username</th>
    <th>Email</th>
  </tr>
    <% @users.each do |user| -%>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td>
        <%= link_to 'Show', admin_user_path(user) %> |
        <%= link_to 'Edit', edit_admin_user_path(user) %> |
        <%= link_to 'Destroy', admin_user_path(user), :confirm => 'Are you sure?', :method => :delete %> </td>
    </tr>
    <% end -%>
</table>

<br />

<%= link_to 'New User', new_admin_user_path %>

