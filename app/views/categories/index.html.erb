<% title "Categories" %>

<% form_for @reservation do |f| %>
  <%= f.collection_select :type_of, Event::TYPES, :to_s, :humanize %>
<br>
<br>
  <% @categories.each do |category| -%>
    <%=h category.title %>
    <%=h category.url %>
<br>
    <% category.events.each do |event| %>
        <%= f.radio_button :event_id, event.id %>
        <%=h event.title %><br>
    <% end -%>
    <br>
  <% end -%>

  <%= f.submit "Next", :name => "next_button" %>
<% end -%>

