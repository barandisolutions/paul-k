<%= @reservation.current_step %>
<% form_for @reservation do |f| %>
  <%= f.error_messages %>
  <p>
    <strong>Event: </strong>
    <%=h @reservation.event_id %>
  </p>
  <p>
    <strong>Type of: </strong>
    <%=h @reservation.type_of %>
  </p>
  <p>
    <%= f.label :date %><br />
    <%= calendar_date_select_tag "reservation[date]", @reservation.date, :time => true, :size => '30' %>
  </p>
  <p>
    <%= f.label :time %><br />
    <%= f.datetime_select :time %>
  </p>
  <p>
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label :zipcode %><br />
    <%= f.text_field :zipcode %>
  </p>
  <% if -%>
    <%= render 'round_trip_form', :f => f %>
  <% end -%>
  <p>
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </p>
  <p>
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.label :note %><br />
    <%= f.text_area :note %>
  </p>
  <p><%= f.submit %></p>
    <%= f.submit "Back", :name => "back_button" %>
<% end %>

